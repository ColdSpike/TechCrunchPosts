<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.makrandpawar.intentfilterdemo.DetailedPost"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/deailedpostactivity_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_margin="5dp"/>
    <ImageView
        android:id="@+id/deailedpostactivity_image"
        android:layout_margin="5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_placeholder"/>
    <WebView
        android:id="@+id/deailedpostactivity_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        />
    <TextView
        android:id="@+id/deailedpostactivity_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#000000"
        android:textStyle="italic|bold"
        android:layout_margin="5dp"
        android:layout_gravity="end"/>
</LinearLayout>
</ScrollView>